---
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Tigers: Reunite</title>
	</head>
	<body class="h-full min-h-screen m-0 overflow-hidden bg-black text-tiger-orange flex flex-col items-center justify-start relative pt-[6vh] font-racing">
		<!-- Background Video -->
		<video 
			autoplay 
			muted 
			loop 
			playsinline 
			class="fixed top-1/2 left-1/2 min-w-full min-h-full w-auto h-auto transform -translate-x-1/2 -translate-y-1/2 object-cover brightness-55 z-0"
		>
			<source src="/tigersv2.mp4" type="video/mp4" />
			Your browser does not support the video tag.
		</video>

		<!-- Main Title -->
		<h1 class="relative text-center uppercase font-semibold z-10 text-[clamp(2rem,5vw,4.5rem)] tracking-[0.05em] animate-fade-in font-racing text-glow">
			Tigers: Reunite
			<span class="block opacity-95 text-[0.5em] tracking-[0.1em] font-racing font-medium text-glow">
				2026. Stay Tuned.
			</span>
		</h1>
	</body>
</html>
